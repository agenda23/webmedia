{
  "name": "webmedia",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "seed": "node prisma/seed.js",
    "fly:deploy": "fly deploy",
    "fly:deploy-with-timeout": "fly deploy --release-command-timeout 900",
    "fly:migrate": "fly ssh console -C 'bash /app/scripts/migrate.sh'",
    "fly:init-sqlite": "fly ssh console -C 'bash /app/scripts/init-sqlite.sh'",
    "fly:update-schema": "fly ssh console -C 'bash /app/scripts/update-schema.sh'",
    "fly:diagnose": "fly ssh console -C 'bash /app/scripts/diagnose.sh'",
    "fly:launch": "fly launch --copy-config",
    "fly:pg:create": "fly postgres create --name webmedia-db --region nrt",
    "fly:pg:attach": "fly postgres attach webmedia-db --app webmedia",
    "fly:set-secrets": "bash ./scripts/set_fly_secrets.sh",
    "prisma:use-dev": "bash ./scripts/switch-prisma-schema.sh dev",
    "prisma:use-prod": "bash ./scripts/switch-prisma-schema.sh prod"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@remix-run/node": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "@remix-run/serve": "^2.16.5",
    "bcryptjs": "^3.0.2",
    "isbot": "^4.1.0",
    "prisma": "^6.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "version": "1.0.0",
  "description": "- ðŸ“– [Remix docs](https://remix.run/docs)",
  "main": "postcss.config.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
